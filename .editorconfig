root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Zig files
[*.zig]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# ZON files
[*.zon]
indent_style = space
indent_size = 4
